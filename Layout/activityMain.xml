<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_6run"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:layout_marginTop="12dp"
        android:text="@string/button_label_six"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_4run"
        android:onClick="addSixRuns" />

    <Button
        android:id="@+id/button_4run2"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:text="@string/button_label_four"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_3run2"
        android:onClick="addFourRuns2" />

    <Button
        android:id="@+id/button_3run2"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:text="@string/button_label_3_runs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_2run2"
        android:onClick="addThreeRuns2"/>

    <Button
        android:id="@+id/button_2run2"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:text="@string/button_label_2_runs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_1run2"
        android:onClick="addTwoRuns2" />

    <Button
        android:id="@+id/button_1run2"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:text="@string/button_label_1_run"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="addOneRuns2" />

    <EditText
        android:id="@+id/plaintext_player1"
        android:layout_width="202dp"
        android:layout_height="42dp"
        android:background="#3F51B5"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/button_label_team_01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="204dp"
        android:layout_height="40dp"
        android:background="#FFEB3B"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/button_label_team_02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plaintext_player1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_1run"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:text="@string/button_label_1_run"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="addOneRuns" />

    <Button
        android:id="@+id/button_2run"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:text="@string/button_label_2_runs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_1run"
        android:onClick="addTwoRuns" />

    <Button
        android:id="@+id/button_6run2"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:layout_marginTop="12dp"
        android:text="@string/button_label_six"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.985"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_4run2"
        android:onClick="addSixRuns2" />

    <Button
        android:id="@+id/button_4run"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:text="@string/button_label_four"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_3run"
        android:onClick="addFourRuns" />

    <Button
        android:id="@+id/button_3run"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:text="@string/button_label_3_runs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_2run"
        android:onClick="addThreeRuns" />

    <Button
        android:id="@+id/button_finish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/button_label_finish"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="gameFinish" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/button_label_reset"
        app:backgroundTint="#F84336"
        app:layout_constraintBottom_toTopOf="@+id/button_finish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="scoreReset" />

    <TextView
        android:id="@+id/show_t1score"
        android:layout_width="202dp"
        android:layout_height="273dp"
        android:background="#2E96F3"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/score_label_t1"
        android:textSize="90sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plaintext_player1" />

    <TextView
        android:id="@+id/show_t2score"
        android:layout_width="203dp"
        android:layout_height="273dp"
        android:background="#CFDC39"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/score_label_t2"
        android:textSize="90sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/show_t1score"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2" />

</androidx.constraintlayout.widget.ConstraintLayout>
